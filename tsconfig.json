{
  "compilerOptions": {
    "sourceMap": true,
    "strict": false,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowJs": true,
    "module": "commonjs",
    "target": "ES5",
    "lib": ["es2017", "dom"],
    "jsx": "react",
    "types": ["react"],
    "rootDir": "src",
    "outDir": "dist/lib",
    "stripInternal": true,
    "removeComments": true,
    "declarationMap": true,
    "declaration": true,
    "declarationDir": "dist/@types",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}